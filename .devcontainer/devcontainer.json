{
  "name": "Spring Boot 4 Todo API",
  "image": "maven:3.9-eclipse-temurin-21",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot",
        "vscjava.vscode-spring-boot-dashboard",
        "vscjava.vscode-maven",
        "hashicorp.terraform",
        "ms-python.python"
      ],
      "settings": {
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic"
      }
    }
  },
  "forwardPorts": [8080, 9090],
  "portsAttributes": {
    "8080": {
      "label": "REST API",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "gRPC",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y curl unzip && curl -sSL https://github.com/fullstorydev/grpcurl/releases/download/v1.8.9/grpcurl_1.8.9_linux_x86_64.tar.gz | tar -xz -C /usr/local/bin && chmod +x /usr/local/bin/grpcurl && mvn clean install -DskipTests",
  "remoteUser": "root"
}


